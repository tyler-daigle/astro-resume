---
import type { CollectionEntry } from "astro:content";

interface Props {
  history: CollectionEntry<"history">;
}

const { history } = Astro.props;
const { Content } = await history.render();
const { title, startDate, endDate } = history.data;
---

<section>
  <h3 class="text-2xl">{title}</h3>
  <p class="text-lg">{startDate} {endDate ? `- ${endDate}` : ""}</p>

  <div class="content-container text-lg my-4">
    <Content />
  </div>
</section>
